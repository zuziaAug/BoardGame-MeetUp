<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutBackground"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clickable="true"
    android:clipToPadding="true"
    android:focusable="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sessionBgColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dirty_green" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/buttonSessionDetail"
            android:layout_width="102dp"
            android:layout_height="48dp"
            android:layout_gravity="center|right"
            android:layout_margin="35dp"
            android:adjustViewBounds="false"
            android:background="@color/dirty_green"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/check" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sessionGameNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="15dp"
            android:gravity="center|left"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Dune: Imperium" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sessionPlaceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Place: Defuse" />

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>